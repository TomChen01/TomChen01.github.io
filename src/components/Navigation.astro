---
const links = [
  { text: "Home", href: "/" },
  { text: "About", href: "/about" },
  { text: "Projects", href: "/projects" },
  { text: "Notes", href: "/notes" },
  { text: "Hobbies", href: "/hobbies" },
];
---
<nav class="w-full flex justify-between items-center py-5 px-6 md:px-12 bg-[#1a1a1a] text-white sticky top-0 z-50 border-b border-gray-800">
  <div class="flex items-center gap-2">
    <a href="/" class="text-2xl font-bold tracking-tight flex items-center gap-2">
      <div class="w-8 h-8 bg-white text-gray-900 rounded-full flex items-center justify-center font-bold text-sm">TC</div>
      Tom Chen
    </a>
  </div>
  
  <div class="hidden md:flex gap-8 text-[22px] font-medium text-gray-300">
    {links.map(link => (
      <a href={link.href} class="hover:text-white transition-colors">
        {link.text}
      </a>
    ))}
  </div>

  <!-- Mobile Menu Button -->
  <button class="md:hidden p-2 text-gray-400 hover:text-white">
    <span class="sr-only">Menu</span>
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
  </button>
</nav>
